---
import type { Project } from '../types/project';

export interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<div class="cursor-pointer">
  <div class="flex flex-col justify-between p-4 border-stone-400 min-h-56 dark:border-stone-600 border-[1px] rounded-lg">
    <div>
      {project.link ? (
        <a 
          target="_blank" 
          rel="noopener noreferrer"
          class="flex items-center gap-3" 
          href={project.link}
          aria-label={`Visit ${project.name} website`}
        >
          <h1 class="font-bold">{project.name}</h1>
          <svg 
            fill="currentColor" 
            viewBox="0 0 16 16" 
            height="1.3em" 
            width="1.3em" 
            class="text-xs opacity-65 hover:opacity-100"
            aria-hidden="true"
          >
            <path 
              fill-rule="evenodd" 
              d="M14 2.5a.5.5 0 00-.5-.5h-6a.5.5 0 000 1h4.793L2.146 13.146a.5.5 0 00.708.708L13 3.707V8.5a.5.5 0 001 0v-6z"
            />
          </svg>
        </a>
      ) : (
        <h1 class="font-bold">{project.name}</h1>
      )}
      
      <p class="text-xs opacity-65 mb-5">{project.dateOfExistence}</p>
      <p class="mb-3">{project.description}</p>
      
      <div class="flex flex-wrap gap-2">
        {project.tags.map((tag) => (
          <span 
            class="text-xs px-2 py-1 bg-gray-100 dark:bg-gray-800 rounded-md opacity-75"
          >
            {tag}
          </span>
        ))}
      </div>
    </div>
  </div>
</div>
